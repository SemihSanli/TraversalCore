@model List<MovieAPIViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>API IMDB Top 100 Listesi</h1>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Sıra</th>
        <th>Film Adı</th>
        <th>Açıklama</th>
        <th>Resim</th>
    </tr>
    @foreach(var item in Model){
        <tr>
            <td>@item.rank</td>
            <td>@item.title</td>
            <td>@item.description</td>
            <td><img src="@item.image" witdh="200" height="200" /></td>
            
        </tr>
    }
</table>



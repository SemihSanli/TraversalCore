@using Traversal_Core.CQRS.Results
@model GetDestinationByIDQueryResult
@{
    ViewData["Title"] = "GetDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Lokasyon Düzenleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="ID" />
    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label>Gün-Gece</label>
    <input type="text" asp-for="Daynight" class="form-control" />
    <br />
    <label>Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" />
    <button class="btn btn-outline-success">Tur Verilerini Güncelle</button>
    <br />
</form>
